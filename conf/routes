# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Ventures page
GET     /ventures                   controllers.Application.ventures

# Method page
GET     /method                     controllers.Application.method
GET     /method/:id                 controllers.Application.methodSection(id: String)

# Patterns page
GET     /patterns                   controllers.Application.patterns
GET     /patterns/:id               controllers.Application.pattern(id: String)

# Vision page
GET     /vision                     controllers.Application.vision

# Contact page
GET     /contact                    controllers.Application.contact

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
